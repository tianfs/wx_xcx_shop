@import '/weui.wxss';
.det-title{
  background:#F16261; 
  padding: 15px;
  box-sizing: border-box;
  overflow: hidden;
}
.det-title-left{
  float: left;
  margin-left: 50rpx;
  margin-top: 50rpx;
}
.det-title-left text{
  font-size: 26rpx;
  display: block;
  color: #ffffff;
}
.det-title-left .det-title-left-text1{
  font-size: 30rpx;
}
.det-title-img{
  width: 90px;
  height: 90px;
  float: right;
  margin-right: 50rpx;
}
.weui-media-box__title{
  font-size: 28rpx;
  color: #3e3e3e;
}
.weui-media-box__desc{
  font-size: 28rpx;
  color: #3e3e3e;
  margin-top: 10rpx;
}
.det-user-name{
  float: left;
}
.det-phone-num{
  float: right;
}
.weui-media-box__hd_in-appmsg{
  width: 60rpx;
  height: 110rpx;
  margin-right: 10rpx;
}
.weui-panel__bd{
  background: #ffffff;
}
.order-goods-box{
    background: #ffffff;
    padding-bottom: 10px;
}
.c-order-border{
  height: 3px;
  display: block;
}
.c-order-border image{
  width: 100%;
  height: 3px;
  display: block;
}
.c-order-shop-icon{
  width: 29rpx;
  height: 29rpx;
  vertical-align: middle;
}
.c-order-shop-text{
  font-size: 28rpx;
  color: #000000;
  vertical-align: middle;
  margin-left: 10rpx;
}
.weui-media-box__desc{
  font-size: 28rpx;
}
.weui-media-box__hd_in-appmsg{
  width: 110rpx;
}
.weui-media-box__desc{
  margin-top: 0;
}
.c-order-det{
  width: 150rpx;
  overflow: hidden;
  text-align: right;
}
.c-price1{
  font-size: 28rpx;
  color:#F16261;
}
.c-price2{
  font-size: 24rpx;
  color: #beb8b3;
  text-decoration: line-through;
}
.c-num{
  font-size: 24rpx;
  color: #838382;
}
.c-details{
  text-decoration: none;
}
.weui-panel__hd::after{
  left: 0;
}
.order-det-info view{
  font-size: 28rpx;
  color: #545454;
  padding: 5px 0;
}
.order-add{
  width: 60rpx;
}
.order-det-info{
  padding: 10px 15px;
  border-top: 1rpx solid #e5e5e5;
}
.order-det-info-price{
  float: right;
  font-size: 24rpx;
}
.order-det-info-price-red{
  color:#F16261;
}
.order-bh-wrp{
  padding-bottom: 130rpx;
}
.order-bh{
  margin-top: 10px;
  background: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
  color: #898989;
}
.order-bh view{
  color: #898989;
}
.order-bh .order-det-info-price{
  float: none;
  font-size: 28rpx;
}
.order-det-fixed{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  box-sizing: border-box;
  background: #ffffff;
  border-top: 1rpx solid #e5e5e5;

  text-align: right;
}
.order-det-fixed view{
  display: inline-block;
  font-size: 28rpx;
  padding: 5px 10px;
  border-radius: 5px;
  margin: 10px 10px 10px 5px;
}
.weui-media-box {
padding: 10px 15px 10px 15px;
}

.order_goods_bottom_box{
    width:750rpx;
    box-sizing:border-box;
    background:#ffffff;
    text-align:right;

}
.order_goods_bottom_btn{
  display: inline-block;
  font-size: 24rpx;
  padding: 5rpx 5rpx;
  border-radius: 5px;
  border: 1px solid #2d2d2d; 
  margin: 0 15px 0 0 ;
}
.order-det-fixed-btn1{
  border: 1px solid #2d2d2d;
}
.order-det-fixed-btn2{
  background: #F16261;
  border: 1px solid #F16261;
  color: #ffffff;
}
.con-order-gg{
  font-size: 22rpx;
  color: #999999;
  margin-top: 5rpx;
}