/* pages/shopping/shopping.wxss */
.shopping{
    position: relative;
    padding-bottom:100rpx; 
}
.shoppp_title{
    background: #ffffff;
}
.shopp_title{
    margin-top: 20rpx;
    padding: 20rpx;
    border-bottom: 1px solid #f1f1f1;
    background: #ffffff;
}
.touch-item{
    font-size:14px;
    display:flex;
    justify-content:space-between;
    width:100%;
    overflow:hidden;
    background: #ffffff;
}
.shopp_cont{
    width: 100%;
    background: #ffffff;
    padding: 20rpx 0;
    overflow: hidden;
    border-bottom: 6rpx solid #f8f8f8;
    margin-right:0;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    margin-left: -90px
}
.width20{
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}
.shopp_title text{
    margin-left: 10rpx;
    font-size: 30rpx;
    color: #9d9d9d;
}
.chebox{
    width: 40rpx;
    height: 40rpx;
    float: left;
    vertical-align: middle;
    padding: 0 10rpx;
    margin-top: 80rpx;
}
.dt_img_box{
    float: left;
}
.width160{
    width: 200rpx;
    height: 200rpx;
    float: left;
    border-radius: 10rpx;
}
.width30{
    width: 40rpx;
    height: 40rpx
}
.dd_text{
    float: left
}
.dd_text_box{
    width: 470rpx;float: right
}
.shop_text{
    overflow: hidden
}
.left_text{
    width: 340rpx;
    float: left;
    font-size: 26rpx;
    color: #6a6a6a;
}
.right_text{
    padding-right: 10rpx;
    text-align: right;
}
.original_text{
    color: #F16261;
    font-size: 30rpx;
}
.current_text{
    text-decoration: line-through;
    color: #bfbfbf;
    font-size: 26rpx;
}

.stepper {  
    width: 200rpx;  
    border: 1px solid #ccc;  
    border-radius: 6rpx;  
    float: right;
    margin-right: 20rpx;
    margin-top: 60rpx;
   
}  
  
.stepper text {  
    width: 58rpx;  
    text-align: center;  
    float: left;  
    font-size: 40rpx;
    padding: 6rpx 0;
    color: #949494;
}  
  
.stepper input {  
    width: 80rpx;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 30rpx;  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
    padding: 6rpx 0; 
    color: #949494;
}  
.stepper .normal{  
    color: #949494;
}  
  
.stepper .disabled{  
    color: #ccc;  
} 
.settle_accounts{
    position: fixed;
    width: 100%;
    background: #ffffff;
    left: 0;
    bottom: 0;
}
.settle_accounts{
    overflow: hidden;
    height: 100rpx;

}
.sett_left{
    float: left;
    padding: 0 20rpx;
    height: 100rpx;
}
.width30{
    vertical-align: middle;
}
.sett_left text{
    color:#6a6a6a;
    font-size: 28rpx;
    display: inline-block;
    line-height: 100rpx;
    margin-left: 10rpx;
}
.sett_center{
    float: left;
    margin-left: 250rpx;
}
.sett_center .hej_text{
    font-size: 28rpx;
    color:#6a6a6a;
}
.sett_right{
    float: right;
    background:#F16261;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 20rpx;
    color: #ffffff;
    font-size: 30rpx;
    text-align: center
}

.margintop10{
    margin-top: 20rpx;
   
}

.del {
background-color:#F16261;
width:70px;
display:flex;
flex-direction:column;
align-items:center;
justify-content:center;
color:#fff;
-webkit-transform:translateX(70px);
transform:translateX(70px);
-webkit-transition:all 0.4s;
transition:all 0.4s;
}
.con-order-gg{
  font-size: 24rpx;
  color: #999999;
  margin-top: 5rpx;
}
.touch-move-active .shopp_cont,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}