/**app.wxss**/
page{
   background:#fafbf9; 
}
input{
    height:52.5rpx;
    line-height:52.5rpx;
}
.no_data{
text-align:center; 
margin-top:399rpx;
color:#808080;
font-size:36rpx;
}
.white_bj{
    background: #ffffff;
}
.container{
    width: 100%;
    height: 100%;
    display: block;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    overflow: hidden;
}
/*==========单商品==========*/
.drawing{
    padding: 0 20rpx;
    box-sizing: border-box;
    background: #ffffff;
}
.dra_box{
     border-bottom: 1rpx solid #dadada;
     padding-bottom: 30rpx;
     position: relative;
     display: flex;
}
.dt_img{
    width: 190rpx;
    height: 190rpx;
    float: left;
    margin-top:20rpx;

}
.width120{
    width:190rpx;
    height: 190rpx;
}
.dd_text{
   padding-right: 10rpx;
   flex: 4;
   margin-left: 30rpx;
}
.name_title{
    font-size: 32rpx;
    color: #474245;
    margin-top: 20rpx;
     display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.name_describe{
    font-size: 28rpx;
    margin-top: 15rpx;
    color: #969696;
}
.name_certificate{
    font-size: 22rpx;
    margin-top: 15rpx;
    margin-left: 30rpx;
    text-decoration: line-through;
}
.name_member{
    font-size: 24rpx;
}
.org_col{
    color: #ffc38d;
}
.pink_col{
    color: #F16261;
}
.gray_col{
    color: #979797;
}
.price-num{
    position: absolute;
    right:0;
    bottom: 0;
    z-index: 99;
}
.gouwu_icon{
    width: 80rpx;
    height: 80rpx;
}
.point_img{
    position: absolute;
    left: 0;
    top: 0;
}
.poi_icon{
    width: 50rpx;
    height: 75rpx;
}
.increase{
    position: absolute;
    right:0;
    bottom:20rpx;
}
.width50{
    width: 42rpx;
    height: 42rpx;
    vertical-align: middle;
}
.hide{
    display: none;
}
.increase span{
    margin-left: 15rpx;
}
.increase text{
    margin-left: 15rpx;
    color: #4b4b4b;
    font-size: 30rpx;
    display: inline-block;
    text-align: center;
}
/*==========多商品==========*/
.gray_bg{
    background:#fafbf9;
}
.multi_img{
    width: 330rpx;
    height: 420rpx;
    margin: 30rpx 0 0 30rpx;
    float: left;
    background: #ffffff;
}
.width180{
    width: 330rpx;
    height: 300rpx;
}
.title_name{
    margin-top: 10rpx;
    color: #908e8e;
    font-size: 26rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
}
.money_text{
    margin-top: 10rpx;
    color: #979797;
    font-size: 25rpx;
}
.show{ 
 display: block;
}